<view style="background-color:#fff;color:#000;position:fixed;top:0;width:100%;">
  <view style="padding:10px;">
    粤语没有j,q,x,zh,ch,sh
  </view>
  <view style="padding:10px;">n也可以读l，但l不可以读n</view>
  <view style="padding:10px;">j发y音</view>
  <view style="padding:10px;">w发u音</view>
  <view style="display:flex;padding:10px;border-bottom:1px solid #e7e7e7;background-color:#e7e7e7;">
    <view style='width:15%;'>声母</view>
    <view style='width:20%;'>例字</view>
    <view style='width:25%;'>粤语</view>
    <view style='width:25%;'>普通话</view>
    <view style='width:15%;'>发音</view>
  </view>
</view>
<view style="margin-top:210px;">
  <view data-canvoice="{{item.canvoice}}" data-canpronounce="{{item.canpronounce}}" bindtap="play_voice" wx:key="chntext" wx:for="{{items}}" style="display:flex;margin-bottom:5px;padding:10px;border-bottom:1px solid #e7e7e7;background-color:#f8f8f8;">
    <view style='width:15%;'>{{item.chntext}}</view>
    <view style='width:20%;'>{{item.cantext}}</view>
    <view style='width:25%;'>{{item.canpronounce}}</view>
    <view style='width:25%;'>{{item.description}}</view>
    <view style='width:15%;'>
      <image style="height:20px;width:20px;" src="/images/voice.png"></image>
    </view>
  </view>
</view>